{
  "version": "0.2.0",
  "configurations": [
    // Windows debug configurations, for Visual Studio compiler:
    {
      "name": "Debug (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "build/bin/Debug/gltf-viewer.exe",
      "args": [
        ""
      ],
      "stopAtEntry": false,
      "environment": [],
      "console": "externalTerminal",
      "cwd": "${workspaceRoot}",
    },
    {
      "name": "Display Info (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "build/bin/Debug/gltf-viewer.exe",
